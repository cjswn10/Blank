<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="book">
  <select id="listBook" resultType="bookVo" parameterType="String">
    select b.bno,btitle,bcolor,w.mno from book b,write w,member m where b.bno=w.bno and w.mno=m.mno and id=#{id} order by b.bno
  </select>
  
  <select id="detailBook" resultType="bookVo">
  	select * from book where bno = #{bno}
  </select>
  
  <select id="bookNextBno" resultType="java.lang.Integer">
  	select nvl(max(bno),0)+1 from book
  </select>
  
  <insert id="insertBook">
  	insert into book values(#{bno},#{btitle},#{bcolor})
  </insert>
  
  <update id="updateBook">
  	update book set btitle=#{btitle},bcolor=#{bcolor} where bno=#{bno}
  </update>
  
  <delete id="deleteBook">
  	delete book where bno=#{bno}
  </delete>
  
  <delete id="deleteDiary">
		delete diary where dno=#{dno}
	</delete>
	
	<delete id="deleteWrite">
		delete write where dno=#{dno}
	</delete>
</mapper>